<%- layout('layouts/boilerplate.ejs') %>
    <div class="container mt-5">
        <div class="row">
            <div class="card shadow mx-auto mb-5" style="width: 50rem;">
                <img src="https://images.unsplash.com/photo-1540921002383-b2a7ff6a716d?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80"
                    class="card-img-top mt-2 style=" border-radius: 15px;" alt="...">
                <div class="card-body">
                    <p class="card-text mt-2 text-muted" style="text-align: center;">
                        Merci de préciser dans les commentaires le nombre d'enfants présents à table (s'il y en a) pour
                        tout
                        retard de plus de 20 min votre table sera donnée à un autre client
                    </p>
                </div>
                <div>
                    <!-- <p id="output1">Reservations left:</p> -->
                    <%if(foundCovers[0].total_covers < 20){%>
                        <h5>Reservations available</h5>
                        <%} else{%>
                            <h5>Reservations full</h5>
                            <%}%>
                </div>
                <!-- ----form---- -->
                <form method="POST" action="/main/reservations" class="needs-validation" novalidate>
                    <!-- ----name---- -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="exampleInputEmail1" class="form-label">Name</label>
                                <input type="text" class="form-control" id="exampleInputEmail1" name="reservation[name]"
                                    required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Please enter a name.
                                </div>
                            </div>
                        </div>
                        <!-- ----email---- -->
                        <div class="col">
                            <div class="mb-3">
                                <label for="exampleInputEmail1" class="form-label">Email address</label>
                                <input type="email" class="form-control" id="exampleInputEmail1"
                                    name="reservation[email]" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Please enter a valid email.
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <!-- ----covers---- -->
                        <div class="col-md-6">
                            <div class="input-group mb-3">
                                <label class="input-group-text" for="inputGroupSelect01"><svg
                                        xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                        class="bi bi-person-plus" viewBox="0 0 16 16">
                                        <path
                                            d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
                                        <path fill-rule="evenodd"
                                            d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z" />
                                    </svg></label>
                                <select class="form-select" id="inputGroupSelect01" name="reservation[covers]">
                                    <option value="">Choose...</option>
                                    <option value="2">2 couverts</option>
                                    <option value="3">3 couverts</option>
                                    <option value="4">4 couverts</option>
                                    <option value="5">5 couverts</option>
                                </select>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Please enter for how many people.
                                </div>
                            </div>
                        </div>
                        <!-- ----date---- -->
                        <div class="col-md-6">
                            <div class="input-group date" data-provide="datepicker">
                                <label class="input-group-text" for="inputGroupSelect02"><svg
                                        xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16">
                                        <path
                                            d="M4.75 0a.75.75 0 0 1 .75.75V2h5V.75a.75.75 0 0 1 1.5 0V2h1.25c.966 0 1.75.784 1.75 1.75v10.5A1.75 1.75 0 0 1 13.25 16H2.75A1.75 1.75 0 0 1 1 14.25V3.75C1 2.784 1.784 2 2.75 2H4V.75A.75.75 0 0 1 4.75 0ZM2.5 7.5v6.75c0 .138.112.25.25.25h10.5a.25.25 0 0 0 .25-.25V7.5Zm10.75-4H2.75a.25.25 0 0 0-.25.25V6h11V3.75a.25.25 0 0 0-.25-.25Z">
                                        </path>
                                    </svg></label>
                                <input id="inputGroupSelect02" class="form-control" type="date" name="reservation[date]"
                                    min="<%=today%>" required />
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Please enter a date.
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- ----reservation time---- -->
                    <div class="row mt-4">
                        <!-- ----midi---- -->
                        <div class="col-md-6">
                            <p>Choose the time:</p>
                            <div class="input-group mb-3">
                                <label class="input-group-text" for="inputGroupSelect03"><svg
                                        xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                        class="bi bi-alarm" viewBox="0 0 16 16">
                                        <path
                                            d="M8.5 5.5a.5.5 0 0 0-1 0v3.362l-1.429 2.38a.5.5 0 1 0 .858.515l1.5-2.5A.5.5 0 0 0 8.5 9V5.5z" />
                                        <path
                                            d="M6.5 0a.5.5 0 0 0 0 1H7v1.07a7.001 7.001 0 0 0-3.273 12.474l-.602.602a.5.5 0 0 0 .707.708l.746-.746A6.97 6.97 0 0 0 8 16a6.97 6.97 0 0 0 3.422-.892l.746.746a.5.5 0 0 0 .707-.708l-.601-.602A7.001 7.001 0 0 0 9 2.07V1h.5a.5.5 0 0 0 0-1h-3zm1.038 3.018a6.093 6.093 0 0 1 .924 0 6 6 0 1 1-.924 0zM0 3.5c0 .753.333 1.429.86 1.887A8.035 8.035 0 0 1 4.387 1.86 2.5 2.5 0 0 0 0 3.5zM13.5 1c-.753 0-1.429.333-1.887.86a8.035 8.035 0 0 1 3.527 3.527A2.5 2.5 0 0 0 13.5 1z" />
                                    </svg></label>
                                <select class="form-select" id="inputGroupSelect03" name="reservation[time]" required>
                                    <option value="">Choose the time</option>
                                    <option value="12:00">12:00</option>
                                    <option value="12:15">12:15</option>
                                    <option value="12:30">12:30</option>
                                    <option value="12:45">12:45</option>
                                    <option value="13">13:00</option>
                                    <option value="13:15">13:15</option>
                                    <option value="13:30">13:30</option>
                                    <option value="19:00">19:00</option>
                                    <option value="19:15">19:15</option>
                                    <option value="19:30">19:30</option>
                                    <option value="19:45">19:45</option>
                                    <option value="20:00">20:00</option>
                                    <option value="20:15">20:15</option>
                                    <option value="20:30">20:30</option>
                                </select>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Please enter a time.
                                </div>
                            </div>
                        </div>
                        <!-- allergies -->
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <%if(!user_id){%>
                                    <textarea class="form-control" placeholder="Leave a comment here" id="reg_allergies"
                                        style="height: 100px" name="reservation[allergies]" required></textarea>
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                    <div class="invalid-feedback">
                                        Please enter your allergies.
                                    </div>
                                    <label for="reg_allergies">Allergies</label>
                                    <%} else {%>
                                        <textarea class="form-control" id="reg_allergies" style="height: 100px"
                                            name="reservation[allergies]"><%=foundUser[0].allergies%></textarea>
                                        <label for="reg_allergies">Allergies</label>
                                        <%}%>
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-success mb-3 mt-3 d-flex mx-auto">Submit</button>
                </form>
            </div>
        </div>
    </div>