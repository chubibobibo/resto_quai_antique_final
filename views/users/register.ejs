<%- layout('layouts/boilerplate.ejs') %>
    <div class="container">
        <div class="row">
            <div class="card mx-auto mt-5" style="width: 30rem;">
                <img src="/assets/restoLogo.png" class="card-img-top" alt="..." style="height: 25rem;">
                <div class="card-body">
                    <h5 class="card-title">Create new user</h5>
                    <!-- ----register form---- -->
                    <form method="POST" action="/user/register">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="reg_name">
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="reg_password">
                        </div>
                        <!-- default covers -->
                        <div>
                            <div class="input-group mb-3">
                                <label class="input-group-text" for="inputGroupSelect01"><svg
                                        xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                        class="bi bi-person-plus" viewBox="0 0 16 16">
                                        <path
                                            d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
                                        <path fill-rule="evenodd"
                                            d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z" />
                                    </svg></label>
                                <select class="form-select" id="inputGroupSelect01" name="reg_defaultCovers" required>
                                    <option value="">Choose...</option>
                                    <option value="2">2 couverts</option>
                                    <option value="3">3 couverts</option>
                                    <option value="4">4 Couverts</option>
                                    <option value="5">5 Couverts</option>
                                </select>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Please enter a message in the textarea.
                                </div>
                            </div>
                        </div>
                        <!-- default allergies -->
                        <div class="form-floating mb-3">
                            <textarea class="form-control" placeholder="Leave a comment here" id="reg_allergies"
                                style="height: 100px" name="reg_allergies" required></textarea>
                            <label for="reg_allergies">Allergies</label>
                        </div>
                        <button type="submit" class="btn btn-primary">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>